@using BaselineSolution.WebApp.Components.HtmlHelpers.Forms
@using BaselineSolution.WebApp.Components.Models.SelectLists
@model BaselineSolution.WebApp.Areas.Security.ViewModels.Account.EditViewModel



<div class="row">
    <div class="col-sm-12">
        <h1>
            @SecurityResource.Title_Account
        </h1>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <form method="post">

            @Html.HiddenFor(x => x.AccountBo.Id)

            @Html.FormElementFor(x => x.AccountBo.Name)
            @Html.FormElementFor(x => x.AccountBo.Description)

            @Html.FormElementFor(x => x.AccountBo.ParentId,
            Html.SelectFor(x => x.AccountBo.ParentId, Model.ParentAccounts, new LocalSelectOptions{Placeholder = WebApp.Select}).Options(x => x.Id, x => x.Display))

            @Html.SubmitAndCancel(WebApp.Form_Save, WebApp.Form_Cancel, Url.Action("Index", "Account"))
        </form>
    </div>
</div>


